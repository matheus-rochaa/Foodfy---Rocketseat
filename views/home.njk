{% extends "layout.njk" %}

{% block head%}
<title>Home - Foodfy</title>
{% endblock %}

{% block header %}
<a href="/"><strong>Home</strong></a>
<a href="/about">Sobre</a>
<a href="/recipe">Receitas</a>
{% endblock %}

{% block content %}
<main>
    <div class="rectangle">
        <div class="info">
            <h1>As melhores receitas</h1>
            <p>Aprenda a construir os melhores pratos
                com receitas criadas por profissionais
                do mundo inteiro.</p>
        </div>      
        <div class="chef">
            <img src="/assets/chef.png" alt="">
        </div>        
    </div>
</main>

<section class="cards">
    <div class="card__title">
        <h2>Receitas</h2>
    </div>

    <div class="card__moreAccessed">
        {% for item in items %} {# Vai repetir 6 vezes - Pq tem 6 obj no data.js #}
        <div class="card" id="{{ item.id }}">
            <div class="card__image-container">
                <img src="{{ item.image }}" alt="{{ item.title }}">
            </div>

            <div class="card__content">
                <h3>{{ item.title }}</h3>
            </div>

            <div class="card__info">
                <p>{{ item.author }}</p>
            </div>              
        </div>
        {% endfor %}
    </div>
</section>
{% endblock %}