{% extends "layout.njk" %}

{% block head%}
        <title>Receitas - Foodfy</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block header %}
<a href="/">Home</a>
<a href="/about">Sobre</a>
<a href="/recipe"><strong>Receitas</strong></a>
{% endblock %}

{% block content %}
    <section class="cards">
        <div class="card__recipe">
            {# <div class="card__moreAccessed"> #}
                {% for item in items %} {# Vai repetir 6 vezes - Pq tem 6 obj no data.js #}
                <div class="card" id="{{ item.id }}">
                    <div class="card__image-container">
                        <img src="{{ item.image }}" alt="{{ item.title }}">
                    </div>

                    <div class="card__content__recipe">
                        <h2>{{ item.title }}</h2>
                    </div>

                    <div class="card__info__recipe">
                        <h3>{{ item.author }}</h3>
                    </div>                
                    
                    <div class="card__recipe">
                        <h3>Ingredientes</h3>
                        <ul>
                            <li>{{ item.ingredients }}</li>
                        </ul>
                    </div>

                    <div class="card__recipe">
                        <h3>Modo de preparo</h3>
                        <p>{{ item.preparation }}</p>
                    </div>
                    
                    <div class="card__recipe">
                        <h3>Informações adicionais</h3>
                        <p>{{ item.information }}</p>
                    </div>
                </div>
                {% endfor %}

                <!-- Repetindo -->
                {% for item in items %} {# Vai repetir 6 vezes - Pq tem 6 obj no data.js #}
                <div class="card" id="{{ item.id }}">
                    <div class="card__image-container">
                        <img src="{{ item.image }}" alt="{{ item.title }}">
                    </div>

                    <div class="card__content">
                        <h3>{{ item.title }}</h3>
                    </div>

                    <div class="card__info">
                        <p>{{ item.author }}</p>
                    </div>                
                    
                    <div class="card__ingredients">
                        <h2>Ingredientes</h2>
                        <ul>
                            <li>{{ item.ingredients }}</li>
                        </ul>
                    </div>

                    <div class="card__preparation">
                        <h2>Mode de preparo</h2>
                        <p>{{ item.preparation }}</p>
                    </div>
                    
                    <div class="card__information">
                        <h2>Informações adicionais</h2>
                        <p>{{ item.information }}</p>
                    </div>
                </div>
                {% endfor %}
            {# </div> #}
        </div>
    </section>

    <script src="/scripts.js"></script>        

{% endblock %}